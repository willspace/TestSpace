/* 步骤1： 输入手机号 */
.acclock-s1{
    padding-bottom: 82px;
    .m-opr{
        margin-top: 37px;
    }
}
/* 步骤2： 选择锁定方式 */
.acclock-s2{
    padding-bottom: 83px;
    .sub_tlt{
        margin:0 auto;
        color:$fc_black;
    }
    .b-channel{
       padding:2px 0 3px;
       .tlt{
            display:none;
       }
       .i-channel{
            .tlt{
                display:block;
                padding: 16px 0 7px 0;
            }
       }
    }
}
/* 步骤2-mob： 手机验证 */
.acclock-s2-mob{

}
/* 步骤3： info */
.acclock-s3{

    margin-bottom: 8px;
    padding-bottom: 108px;
    .m-succ{
        padding-top:33px;
        padding-bottom:0;
        .note{
            padding-top:12px;
            h3{
                padding-bottom: 8px;
            }
            p{
                font-size:15px;
            }
        }
        .u-bak{
            padding-top: 46px;
        }
        .b-btn{
            margin-top:2px;
            height:41px;
            line-height:41px;
            font-size: 15px;
        }
    }
}